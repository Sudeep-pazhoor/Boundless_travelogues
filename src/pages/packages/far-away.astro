---
import Layout from '../../layouts/Layout.astro';
import PackageCard from '../../components/PackageCard.jsx';
---

<Layout title="Far-Away Getaways - Boundless Travelogues">
  <section class="container">
    <h1 style="text-align: center; color: var(--primary-color);">Far-Away Getaways</h1>
    <p style="text-align: center; font-size: 1.15rem; margin-bottom: 3rem; color: var(--text-color);">Venture further with comfortable stays & regional delicacies</p>
    
    <!-- Priority Destinations -->
    <div class="grid">
      <PackageCard client:load 
        title="Goa" 
        image="https://wallpaperaccess.com/full/3068312.jpg" 
        description="Beaches, nightlife, Portuguese heritage, and water sports paradise." 
        link="/packages/far-away/goa" />
      
      <PackageCard client:load 
        title="Bangalore" 
        image="https://wallpaperaccess.com/full/1906276.jpg" 
        description="Garden city with modern attractions, shopping, and vibrant culture." 
        link="/packages/far-away/bangalore" />
      
      <PackageCard client:load 
        title="Hyderabad" 
        image="https://wallpaperaccess.com/full/2142721.jpg" 
        description="City of Nizams with Charminar, Golconda Fort, and famous biryani." 
        link="/packages/far-away/hyderabad" />
      
      <PackageCard client:load 
        title="Udupi" 
        image="https://w0.peakpx.com/wallpaper/55/603/HD-wallpaper-kapu-beach-indian-ocean-coast-lighthouse-beach-udupi-karnataka-india.jpg" 
        description="Temple town with pristine beaches and authentic vegetarian cuisine." 
        link="/packages/far-away/udupi" />
      
      <PackageCard client:load 
        title="Dandeli" 
        image="https://www.adotrip.com/public/images/city/master_images/5e4e5841c27c6-Dandeli_Attractions.jpg" 
        description="Adventure hub with white water rafting and wildlife sanctuary." 
        link="/packages/far-away/dandeli" />
      
      <PackageCard client:load 
        title="Dudhsagar Falls" 
        image="https://www.dastourism.com/media/blogs/blog-17.jpg" 
        description="Milky white waterfall cascading through lush forests." 
        link="/packages/far-away/dudhsagar-falls" />
      
      <PackageCard client:load 
        title="Hampi" 
        image="https://wallpaperaccess.com/full/15210890.jpg" 
        description="UNESCO World Heritage Site with ancient ruins and temples." 
        link="/packages/far-away/hampi" />
      
      <PackageCard client:load 
        title="Mysore" 
        image="https://wallpaperaccess.com/full/5515503.jpg" 
        description="City of Palaces with magnificent Mysore Palace and silk sarees." 
        link="/packages/far-away/mysore" />
      
      <PackageCard client:load 
        title="Coorg" 
        image="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f5/Thadiyantamol_betta_9.jpg/640px-Thadiyantamol_betta_9.jpg" 
        description="Scotland of India with coffee plantations and misty hills." 
        link="/packages/far-away/coorg" />
      
      <PackageCard client:load 
        title="Chikmagalur" 
        image="https://assets.zeezest.com/images/PROD_Shankar%20Falls_1753982408079_thumb_500.jpeg" 
        description="Coffee land with trekking trails and scenic beauty." 
        link="/packages/far-away/chikmagalur" />
      
      <PackageCard client:load 
        title="Shimoga" 
        image="https://media2.thrillophilia.com/images/photos/000/149/949/original/1554120392_magical-shimoga-with-jog-and-kunchikal-falls-55.jpeg?w=753&h=450&dpr=1.5" 
        description="Gateway to Jog Falls with lush greenery and waterfalls." 
        link="/packages/far-away/shimoga" />
      
      <PackageCard client:load 
        title="Badami & Hogenakkal" 
        image="https://i0.wp.com/stepstogether.in/wp-content/uploads/2015/09/p_20150912_1306501.jpg?resize=576%2C340&ssl=1" 
        description="Ancient cave temples and smoking waterfalls." 
        link="/packages/far-away/badami-hogenakkal" />
      
      <PackageCard client:load 
        title="Jog Falls" 
        image="https://3.imimg.com/data3/HI/GS/MY-9475592/jog-waterfalls.jpg" 
        description="India's second-highest plunge waterfall in monsoon glory." 
        link="/packages/far-away/jog-falls" />
      
      <PackageCard client:load 
        title="Murudeshwar" 
        image="https://images.unsplash.com/photo-1693205118032-9382f7267f55?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8bXVydWRlc2h3YXJ8ZW58MHx8MHx8fDA%3D" 
        description="Towering Shiva statue by the sea with temple and beach." 
        link="/packages/far-away/murudeshwar" />
      
      <PackageCard client:load 
        title="Gokarna" 
        image="https://upload.wikimedia.org/wikipedia/commons/thumb/3/39/1-Halfmoon_beach_Gokarna_Karnatak_India.jpg/640px-1-Halfmoon_beach_Gokarna_Karnatak_India.jpg" 
        description="Pristine beaches and spiritual vibes in a laid-back setting." 
        link="/packages/far-away/gokarna" />
      
      <PackageCard client:load 
        title="Belur" 
        image="https://i0.wp.com/www.tusktravel.com/blog/wp-content/uploads/2022/12/Chennakesava-Temple-Belur-Karnataka.jpg?resize=1200%2C799&ssl=1" 
        description="Hoysala architecture masterpiece with intricate temple carvings." 
        link="/packages/far-away/belur" />
    </div>
  </section>
</Layout>
